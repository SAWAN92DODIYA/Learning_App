<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/light_gray"
    >
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="119dp"
            android:layout_height="62dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:maxWidth="180dp"
            android:src="@drawable/mintra" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_full_name"
            android:layout_below="@id/imageView_logo"
            android:text="Full name*"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_register_full_name"
            android:hint="Enter your Full Name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_below="@id/textView_register_full_name"
            android:background="@drawable/border" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_email"
            android:layout_below="@id/edit_register_full_name"
            android:text="Email*"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_register_email"
            android:hint="Enter your Email Addres"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="6dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_below="@id/textView_register_email"
            android:background="@drawable/border"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_date_of_birth"
            android:layout_below="@id/edit_register_email"

            android:text="Date of Birth(dd/mm/yyyy)*"
            android:focusable="false"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_register_date_of_birth"
            android:hint="Select Your dob"
            android:inputType="date"
            android:textSize="16sp"
            android:padding="6dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_below="@id/textView_register_date_of_birth"
            android:background="@drawable/border"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_gender"
            android:layout_below="@id/edit_register_date_of_birth"
            android:text="Gender*"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:id="@+id/radio_group_register_gender"

            android:layout_below="@id/textView_register_gender">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_female"
                android:text="Female"
                android:buttonTint="@color/pink"
                android:textSize="16sp"
                android:textColor="#555555"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_male"
                android:text="Male"
                android:buttonTint="@color/pink"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#555555"/>


        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_mobile"
            android:layout_below="@id/radio_group_register_gender"
            android:text="Mobile*"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_register_mobile"
            android:hint="Enter Your Mobile No.(without +91)"
            android:maxLength="10"
            android:inputType="phone"
            android:textSize="16sp"
            android:padding="6dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_below="@id/textView_register_mobile"
            android:background="@drawable/border"/>


        <TextView
            android:id="@+id/textView_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_register_mobile"
            android:layout_marginTop="-4dp"
            android:padding="6dp"
            android:text="Password*"
            android:textColor="#555555"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_register_password"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="6dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_below="@id/textView_register_password"
            android:background="@drawable/border"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_confirm_password"
            android:layout_below="@id/edit_register_password"
            android:text=" Confirm Password*"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_register_confirm_password"
            android:hint="Enter your Confirm Password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="6dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_below="@id/textView_register_confirm_password"
            android:background="@drawable/border"/>



        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_below="@id/edit_register_confirm_password"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:background="@color/pink"
            android:text="Register"
 />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"/>







    </RelativeLayout>





</ScrollView>